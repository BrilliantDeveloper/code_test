


<div id="customer-form">
  <h1>Sign up</h1>
  <div class="row" >
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@customer) do |f| %>
          <div class="form-group">
          </div>

          <div class="form-group row">

            <%= f.label :pAccName, class: 'col-sm-3  col-form-label' %>
            <%= f.text_field :pAccName, class: 'col-sm-9 form-control' %>

          </div>

          <div class="form-group  row">
            <%= f.label :pPartner, class: 'col-sm-3  col-form-label' %>
            <%= f.text_field :pPartner, class: 'col-sm-9 form-control' %>
          </div>

          <div class="form-group  row">
            <%= f.label :name, class: 'col-sm-3  col-form-label'  %>
            <%= f.text_field :name, class: 'col-sm-9 form-control' %>
          </div>

          <div class="form-group  row">
            <%= f.label :business_name, class: 'col-sm-3  col-form-label'  %>
            <%= f.text_field :business_name, class: 'col-sm-9 form-control' %>
          </div>

          <div class="form-group  row">
            <%= f.label :tel_number, class: 'col-sm-3  col-form-label'  %>
            <%= f.text_field :tel_number, class: 'col-sm-9 form-control' %>
          </div>

          <div class="form-group  row">
            <%= f.label :email, class: 'col-sm-3  col-form-label'  %>
            <%= f.text_field :email, class: 'col-sm-9 form-control' %>
          </div>

          <div class="form-group  row">
            <%= f.label :contact_time, class: 'col-sm-3  col-form-label'  %>
            <%= f.text_field :contact_time, class: 'col-sm-9 form-control' %>
          </div>

          <div class="form-group  row">
            <%= f.label :notes, class: 'col-sm-3  col-form-label'  %>
            <%= f.text_field :notes, class: 'col-sm-9 form-control' %>
          </div>

          <div class="form-group  row">
            <%= f.label :reference, class: 'col-sm-3  col-form-label'  %>
            <%= f.text_field :reference, class: 'col-sm-9 form-control' %>
          </div>

          <div class="text-center">
            <%= f.submit "Sign up", class: "col-sm-5 btn btn-primary" %>
          </div>


      <% end %>
    </div>

  </div>
</div>

