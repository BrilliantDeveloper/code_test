



  <h1>Callback Signup</h1>
  <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
  <div class="row" >
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@customer) do |f| %>


            <%= render 'shared/error_messages' %>


          <div class="form-group">
            <%= f.label :AccountName, class: 'col-form-label' %>
            <%= f.text_field :pAccName, class: 'form-control' %>
          </div>


          <div class="form-group">
            <%= f.label :Partner, class: 'col-form-label' %>
            <%= f.text_field :pPartner, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :name, class:  'col-form-label'  %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :business_name, class: 'col-form-label'  %>
            <%= f.text_field :business_name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :tel_number, class: 'col-form-label'  %>
            <%= f.text_field :tel_number, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :email, class: 'col-form-label'  %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :contact_time, class: 'col-form-label'  %>
            <%= f.datetime_select :contact_time, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :notes, class: 'col-form-label'  %>
            <%= f.text_area :notes, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :reference, class: 'col-form-label'  %>
            <%= f.text_field :reference, class: 'form-control' %>
          </div>

          <div class="text-center">
            <%= f.submit "Sign up", class: "col-sm-5 btn btn-primary" %>
          </div>


      <% end %>
    </div>

  </div>

